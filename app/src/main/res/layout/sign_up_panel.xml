<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp">

    <!-- Sign Up -->
    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:fontFamily="@font/inter_black"
        android:shadowRadius="1"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="48dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpTextView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Username"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/black"
        android:labelFor="@id/usernameEditText"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/usernameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_border_shadow"
        android:alpha="0.5"
        android:hint="Username"
        android:fontFamily="@font/inter_black"
        android:inputType="text"
        android:paddingLeft="25dp"

        android:drawableEnd="@drawable/correct"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginLeft="50dp"
        android:text="E-Mail"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_border_shadow"
        android:drawableEnd="@drawable/correct"
        android:paddingRight="15dp"
        android:hint="E-Mail"
        android:fontFamily="@font/inter_black"
        android:alpha="0.5"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <!-- Password -->
    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginLeft="50dp"
        android:text="Password"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/passwordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_border_shadow"
        android:drawableEnd="@drawable/eyeclose"
        android:paddingRight="15dp"
        android:hint="Password"
        android:fontFamily="@font/inter_black"
        android:alpha="0.5"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <!-- Repeat Password -->
    <TextView
        android:id="@+id/repeatPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/passwordEditText"
        android:layout_marginLeft="50dp"
        android:text="Repeat password"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/black"
        android:textSize="10dp" />


    <EditText
        android:id="@+id/repeatPasswordEditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/repeatPasswordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:background="@drawable/rounded_border_shadow"
        android:drawableEnd="@drawable/correct"
        android:paddingRight="15dp"
        android:hint="Password"
        android:fontFamily="@font/inter_black"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/repeatPasswordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="Sign up"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Already Have Account Button -->
    <TextView
        android:id="@+id/alreadyHaveAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpButton"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:padding="8dp"
        android:alpha="0.5"
        android:text="Iâ€™m already registered"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="10sp" />

</RelativeLayout>
