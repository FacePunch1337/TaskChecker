<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/rounded_border_shadow"


    android:orientation="vertical">

    <TextView
        android:id="@+id/columnNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_black"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:id="@+id/cardsLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"/>






    <EditText
        android:id="@+id/addCardEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/rounded_down_semi_border_shadow"
        android:clickable="true"
        android:drawableEnd="@drawable/addcardplus"
        android:focusable="true"
        android:fontFamily="@font/inter_black"
        android:gravity="center_vertical"
        android:hint="Add a card"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="3dp"
        android:textColor="@color/black"
        android:textColorHint="@color/blackTransparent80"
        android:textSize="15dp" />




</LinearLayout>