<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Чёрный объект для визуального эффекта тени -->
    <item android:left="3dp" android:top="3dp">
        <shape>
            <solid android:color="?android:shadowColor"
                android:id="@+id/shadow_layer"
                />

            <padding
                android:right="2dp"
                android:bottom="2dp"
              />
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- Основной контур -->
    <item>
        <shape>
            <solid android:color="?android:colorBackground"/>
            <stroke
                android:width="2dp"
                android:color="?android:shadowColor"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>
